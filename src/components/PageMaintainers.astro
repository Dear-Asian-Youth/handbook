---
import { getOwnersForFile } from '../utils/codeowners';
import { getGitHubUrls } from '../utils/github';

interface Props {
  entryId: string;
}

const { entryId } = Astro.props;

// Get GitHub URLs for this entry
const { edit: editUrl, view: viewUrl, filePath } = getGitHubUrls(
  entryId,
  'Dear-Asian-Youth',
  'handbook'
);

// Get maintainers for this file
const maintainers = getOwnersForFile(filePath);
---

<div class="page-maintainers">
  {maintainers.length > 0 && (
    <div class="maintainers-section">
      <h2 class="maintainers-title">
        {maintainers.length === 1 ? 'Maintainer' : 'Maintainers'}
      </h2>
      <div class="maintainers-list">
        {maintainers.map((username) => (
          <a
            href={`https://github.com/${username}`}
            target="_blank"
            rel="noopener noreferrer"
            class="maintainer-item"
            title={`@${username}`}
          >
            <img
              src={`https://github.com/${username}.png?size=80`}
              alt={`@${username}`}
              class="maintainer-avatar"
              loading="lazy"
            />
            <span class="maintainer-username">@{username}</span>
          </a>
        ))}
      </div>
    </div>
  )}
  
  <div class="edit-links">
    <a
      href={editUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="edit-button edit-page"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
      </svg>
      Edit this page
    </a>
    <a
      href={viewUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="edit-button view-source"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="16 18 22 12 16 6"></polyline>
        <polyline points="8 6 2 12 8 18"></polyline>
      </svg>
      View source
    </a>
  </div>
</div>

<style>
  .page-maintainers {
    border-top: 1px solid var(--sl-color-gray-5);
    padding-top: 1.5rem;
    margin-top: 1.5rem;
  }

  .maintainers-section {
    margin-bottom: 1.5rem;
  }

  .maintainers-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sl-color-gray-2);
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .maintainers-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .maintainer-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--sl-color-white);
    transition: background-color 0.2s ease;
  }

  .maintainer-item:hover {
    background-color: var(--sl-color-gray-6);
  }

  .maintainer-avatar {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    border: 2px solid var(--sl-color-gray-5);
    flex-shrink: 0;
  }

  .maintainer-username {
    font-size: 0.875rem;
    color: var(--sl-color-white);
    font-weight: 500;
  }

  .edit-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .edit-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    border: 1px solid var(--sl-color-gray-5);
  }

  .edit-page {
    background-color: var(--sl-color-accent);
    color: white;
    border-color: var(--sl-color-accent);
  }

  .edit-page:hover {
    background-color: var(--sl-color-accent-high);
    border-color: var(--sl-color-accent-high);
  }

  .view-source {
    background-color: transparent;
    color: var(--sl-color-white);
  }

  .view-source:hover {
    background-color: var(--sl-color-gray-6);
    border-color: var(--sl-color-gray-4);
  }

  .edit-button svg {
    flex-shrink: 0;
  }

  @media (max-width: 72rem) {
    .page-maintainers {
      border-top: none;
      padding-top: 0;
      margin-top: 2rem;
    }
  }
</style>

